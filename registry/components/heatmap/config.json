  "files": ["heatmap.tsx", "heatmap.css", "types.ts", "index.ts"],
  "demo": "https://d3-components.com/demo/heatmap",
  "docs": "https://d3-components.com/docs/heatmap",
  "examples": [
    {
      "name": "基本熱力圖",
      "description": "簡單的矩陣資料熱力圖",
      "props": {
        "data": "[{x: 'A', y: '1', value: 0.8}, {x: 'B', y: '2', value: 0.6}]",
        "xKey": "x",
        "yKey": "y",
        "valueKey": "value"
      }
    },
    {
      "name": "相關性矩陣",
      "description": "變數間相關性分析熱力圖",
