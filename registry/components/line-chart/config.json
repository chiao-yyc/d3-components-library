{
  "name": "line-chart",
  "displayName": "Line Chart",
  "description": "時間序列折線圖組件，支援多系列資料和動畫",
  "version": "1.0.0",
  "category": "charts",
  "subcategory": "basic",
  "dependencies": [
    "react",
    "d3",
    "@types/d3",
    "clsx",
    "tailwind-merge"
  ],
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "files": [
    {
      "name": "line-chart.tsx",
      "type": "component",
      "description": "主要組件檔案",
      "path": "./line-chart.tsx"
    },
    {
      "name": "types.ts",
      "type": "type",
      "description": "TypeScript 型別定義",
      "path": "./types.ts"
    },
    {
      "name": "line-chart.css",
      "type": "style",
      "description": "組件樣式檔案",
      "path": "./line-chart.css"
    },
    {
      "name": "cn.ts",
      "type": "util",
      "description": "CSS 類名合併工具",
      "path": "../../utils/cn.ts"
    }
  ],
  "variants": [
    {
      "name": "default",
      "description": "預設折線圖",
      "props": {
        "curve": "monotone",
        "showDots": false
      }
    },
    {
      "name": "smooth",
      "description": "平滑曲線",
      "props": {
        "curve": "cardinal",
        "showDots": true
      }
    },
    {
      "name": "area",
      "description": "區域圖",
      "props": {
        "showArea": true,
        "areaOpacity": 0.2,
        "showDots": false
      }
    },
    {
      "name": "step",
      "description": "階梯線圖",
      "props": {
        "curve": "step",
        "showDots": true
      }
    }
  ],
  "tags": ["chart", "line", "time-series", "d3", "visualization"],
  "props": {
    "data": {
      "type": "any[]",
      "required": true,
      "description": "圖表資料陣列"
    },
    "xKey": {
      "type": "string",
      "required": false,
      "description": "X 軸資料欄位名稱"
    },
    "yKey": {
      "type": "string",
      "required": false,
      "description": "Y 軸資料欄位名稱"
    },
    "seriesKey": {
      "type": "string",
      "required": false,
      "description": "系列分組欄位名稱（多條線）"
    },
    "width": {
      "type": "number",
      "default": 800,
      "description": "圖表寬度"
    },
    "height": {
      "type": "number",
      "default": 400,
      "description": "圖表高度"
    },
    "curve": {
      "type": "'linear' | 'monotone' | 'cardinal' | 'basis' | 'step'",
      "default": "monotone",
      "description": "線條曲線類型"
    },
    "showDots": {
      "type": "boolean",
      "default": false,
      "description": "是否顯示資料點"
    },
    "showArea": {
      "type": "boolean",
      "default": false,
      "description": "是否顯示區域填充"
    },
    "animate": {
      "type": "boolean",
      "default": false,
      "description": "是否啟用動畫效果"
    },
    "interactive": {
      "type": "boolean",
      "default": true,
      "description": "是否啟用互動功能"
    },
    "colors": {
      "type": "string[]",
      "default": ["#3b82f6", "#ef4444", "#10b981"],
      "description": "線條顏色陣列"
    }
  },
  "examples": [
    {
      "name": "基本時間序列",
      "description": "最簡單的時間序列折線圖",
      "code": "import { LineChart } from './components/ui/line-chart'\n\nconst data = [\n  { date: '2023-01-01', value: 100 },\n  { date: '2023-01-02', value: 120 },\n  { date: '2023-01-03', value: 95 }\n]\n\n<LineChart data={data} xKey=\"date\" yKey=\"value\" />"
    },
    {
      "name": "多系列折線圖",
      "description": "顯示多條線的折線圖",
      "code": "<LineChart \n  data={data} \n  xKey=\"date\" \n  yKey=\"value\"\n  seriesKey=\"category\"\n  colors={['#3b82f6', '#ef4444', '#10b981']}\n/>"
    },
    {
      "name": "平滑曲線",
      "description": "使用平滑曲線的折線圖",
      "code": "<LineChart \n  data={data} \n  xKey=\"date\" \n  yKey=\"value\"\n  curve=\"cardinal\"\n  showDots={true}\n/>"
    },
    {
      "name": "區域圖",
      "description": "帶有區域填充的折線圖",
      "code": "<LineChart \n  data={data} \n  xKey=\"date\" \n  yKey=\"value\"\n  showArea={true}\n  areaOpacity={0.2}\n/>"
    },
    {
      "name": "動畫效果",
      "description": "啟用動畫效果的折線圖",
      "code": "<LineChart \n  data={data} \n  xKey=\"date\" \n  yKey=\"value\"\n  animate={true}\n  showDots={true}\n/>"
    }
  ],
  "customization": {
    "cssVariables": [
      "--line-chart-primary",
      "--line-chart-secondary", 
      "--line-chart-background",
      "--line-chart-text",
      "--line-chart-border",
      "--line-chart-grid"
    ],
    "themes": ["light", "dark"],
    "responsive": true,
    "accessibility": true
  },
  "installation": {
    "command": "npx d3-components add line-chart",
    "manualSteps": [
      "複製組件檔案到 ./src/components/ui/line-chart/",
      "安裝必要依賴：npm install d3 @types/d3 clsx tailwind-merge",
      "匯入並使用組件"
    ]
  },
  "changelog": [
    {
      "version": "1.0.0",
      "date": "2025-07-05",
      "changes": ["Initial release", "Support for time series data", "Multiple line series", "Animation and interaction support"]
    }
  ]
}