{
  "name": "candlestick-chart",
  "description": "專業級股市 K線圖（蠟燭圖）組件，支援 OHLC 數據、成交量、技術分析功能",
  "version": "1.0.0",
  "type": "chart",
  "category": "financial-charts",
  "tags": ["candlestick", "k-line", "ohlc", "stock", "financial", "trading", "technical-analysis"],
  "complexity": "intermediate",
  "exports": [
    "CandlestickChart"
  ],
  "dependencies": {
    "react": "^18.0.0",
    "d3": "^7.0.0",
    "@types/d3": "^7.0.0"
  },
  "coreDependencies": [
    "ohlc-processor",
    "color-scheme", 
    "chart-tooltip"
  ],
  "files": [
    "candlestick-chart.tsx",
    "candlestick-chart.css",
    "types.ts",
    "index.ts",
    "config.json"
  ],
  "features": [
    "OHLC 數據處理",
    "台股/美股顏色模式",
    "成交量圖表整合",
    "實時數據支援",
    "響應式設計",
    "互動式提示框",
    "動畫效果",
    "格線顯示",
    "統計資訊",
    "自動欄位偵測"
  ],
  "variants": [
    "default",
    "with-volume",
    "taiwan-style",
    "us-style",
    "minimal"
  ],
  "useCases": [
    "股票價格分析",
    "外匯交易圖表",
    "加密貨幣監控",
    "商品期貨分析",
    "技術分析工具",
    "金融數據視覺化"
  ],
  "dataFormat": {
    "required": ["date", "open", "high", "low", "close"],
    "optional": ["volume"],
    "example": {
      "date": "2024-01-01 或 Date 物件",
      "open": 100.00,
      "high": 105.50,
      "low": 98.75,
      "close": 103.25,
      "volume": 1000000
    }
  }
}