{
  "name": "box-plot",
  "description": "專業箱形圖組件，適用於統計分析和數據分佈可視化",
  "version": "1.0.0",
  "tags": ["chart", "statistics", "box-plot", "distribution", "analytics"],
  "variants": ["default", "vertical", "horizontal"],
  "dependencies": ["react", "d3", "@types/d3"],
  "category": "advanced-analytics",
  "complexity": "intermediate",
  "files": ["box-plot.tsx", "box-plot.css", "types.ts", "index.ts"],
  "props": {
    "data": {
      "type": "array",
      "description": "箱形圖的資料陣列",
      "required": true
    },
    "labelKey": {
      "type": "string",
      "description": "標籤欄位名稱",
      "default": null
    },
    "valueKey": {
      "type": "string",
      "description": "數值欄位名稱",
      "default": null
    },
    "valuesKey": {
      "type": "string", 
      "description": "數值陣列欄位名稱（用於已聚合資料）",
      "default": null
    },
    "width": {
      "type": "number",
      "description": "圖表寬度",
      "default": 500
    },
    "height": {
      "type": "number",
      "description": "圖表高度",
      "default": 400
    },
    "orientation": {
      "type": "string",
      "description": "圖表方向",
      "options": ["vertical", "horizontal"],
      "default": "vertical"
    },
    "boxWidth": {
      "type": "number",
      "description": "箱體寬度",
      "default": 40
    },
    "whiskerWidth": {
      "type": "number",
      "description": "鬚線寬度",
      "default": 20
    },
    "showOutliers": {
      "type": "boolean",
      "description": "顯示異常值",
      "default": true
    },
    "showMean": {
      "type": "boolean",
      "description": "顯示平均值",
      "default": true
    },
    "showMedian": {
      "type": "boolean",
      "description": "顯示中位數",
      "default": true
    },
    "outlierRadius": {
      "type": "number",
      "description": "異常值點的半徑",
      "default": 3
    },
    "meanStyle": {
      "type": "string",
      "description": "平均值標記樣式",
      "options": ["circle", "diamond", "square"],
      "default": "diamond"
    },
    "boxFillOpacity": {
      "type": "number",
      "description": "箱體填充透明度",
      "default": 0.7
    },
    "statisticsMethod": {
      "type": "string",
      "description": "統計計算方法",
      "options": ["standard", "tukey", "percentile"],
      "default": "tukey"
    },
    "showQuartiles": {
      "type": "boolean",
      "description": "顯示四分位數",
      "default": true
    },
    "showWhiskers": {
      "type": "boolean",
      "description": "顯示鬚線",
      "default": true
    },
    "showLabels": {
      "type": "boolean",
      "description": "顯示標籤",
      "default": true
    },
    "animate": {
      "type": "boolean",
      "description": "啟用動畫效果",
      "default": true
    },
    "interactive": {
      "type": "boolean",
      "description": "啟用互動功能",
      "default": true
    }
  },
  "examples": [
    {
      "name": "基本箱形圖",
      "description": "簡單的箱形圖展示",
      "code": "<BoxPlot data={data} labelKey='category' valueKey='value' />"
    },
    {
      "name": "多組數據比較",
      "description": "多個分組的箱形圖比較",
      "code": "<BoxPlot data={groupedData} valuesKey='values' labelKey='group' />"
    },
    {
      "name": "橫向箱形圖",
      "description": "橫向顯示的箱形圖",
      "code": "<BoxPlot data={data} orientation='horizontal' />"
    },
    {
      "name": "統計分析",
      "description": "顯示統計信息的箱形圖",
      "code": "<BoxPlot data={data} showMean={true} showOutliers={true} statisticsMethod='tukey' />"
    }
  ]
}