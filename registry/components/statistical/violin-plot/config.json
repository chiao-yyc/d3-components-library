{
  "name": "violin-plot",
  "description": "進階小提琴圖組件，結合核密度估計和箱形圖統計分析",
  "version": "1.0.0",
  "tags": ["chart", "statistics", "violin-plot", "kde", "distribution", "analytics"],
  "variants": ["default", "vertical", "horizontal", "boxplot"],
  "dependencies": ["react", "d3", "@types/d3"],
  "category": "advanced-analytics",
  "complexity": "advanced",
  "files": ["violin-plot.tsx", "violin-plot.css", "types.ts", "index.ts"],
  "props": {
    "data": {
      "type": "array",
      "description": "小提琴圖的資料陣列",
      "required": true
    },
    "labelKey": {
      "type": "string",
      "description": "標籤欄位名稱",
      "default": null
    },
    "valueKey": {
      "type": "string",
      "description": "數值欄位名稱",
      "default": null
    },
    "valuesKey": {
      "type": "string",
      "description": "數值陣列欄位名稱（用於已聚合資料）",
      "default": null
    },
    "width": {
      "type": "number",
      "description": "圖表寬度",
      "default": 600
    },
    "height": {
      "type": "number",
      "description": "圖表高度",
      "default": 500
    },
    "orientation": {
      "type": "string",
      "description": "圖表方向",
      "options": ["vertical", "horizontal"],
      "default": "vertical"
    },
    "violinWidth": {
      "type": "number",
      "description": "小提琴最大寬度",
      "default": 80
    },
    "bandwidth": {
      "type": "number",
      "description": "KDE 帶寬（自動計算如果未指定）",
      "default": null
    },
    "resolution": {
      "type": "number",
      "description": "密度計算解析度",
      "default": 100
    },
    "showBoxPlot": {
      "type": "boolean",
      "description": "顯示內嵌箱形圖",
      "default": true
    },
    "boxPlotWidth": {
      "type": "number",
      "description": "箱形圖寬度",
      "default": 15
    },
    "showMedian": {
      "type": "boolean",
      "description": "顯示中位數線",
      "default": true
    },
    "showMean": {
      "type": "boolean",
      "description": "顯示平均值點",
      "default": true
    },
    "showQuartiles": {
      "type": "boolean",
      "description": "顯示四分位數箱體",
      "default": true
    },
    "showOutliers": {
      "type": "boolean",
      "description": "顯示異常值",
      "default": true
    },
    "kdeMethod": {
      "type": "string",
      "description": "核密度估計方法",
      "options": ["gaussian", "epanechnikov", "triangular"],
      "default": "gaussian"
    },
    "smoothing": {
      "type": "number",
      "description": "平滑因子",
      "default": 1
    },
    "violinFillOpacity": {
      "type": "number",
      "description": "小提琴填充透明度",
      "default": 0.7
    },
    "animate": {
      "type": "boolean",
      "description": "啟用動畫效果",
      "default": true
    },
    "interactive": {
      "type": "boolean",
      "description": "啟用互動功能",
      "default": true
    }
  },
  "examples": [
    {
      "name": "基本小提琴圖",
      "description": "簡單的小提琴圖展示",
      "code": "<ViolinPlot data={data} labelKey='group' valuesKey='values' />"
    },
    {
      "name": "多組數據比較",
      "description": "多個分組的小提琴圖比較",
      "code": "<ViolinPlot data={groupedData} showBoxPlot={true} kdeMethod='gaussian' />"
    },
    {
      "name": "橫向小提琴圖",
      "description": "橫向顯示的小提琴圖",
      "code": "<ViolinPlot data={data} orientation='horizontal' violinWidth={60} />"
    },
    {
      "name": "高級統計分析",
      "description": "包含核密度估計的詳細統計分析",
      "code": "<ViolinPlot data={data} kdeMethod='epanechnikov' bandwidth={0.5} resolution={150} />"
    }
  ]
}