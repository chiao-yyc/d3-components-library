{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "D3 Components Registry Schema",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date-time"
    },
    "components": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/component"
      }
    },
    "categories": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/category"
      }
    },
    "stats": {
      "type": "object",
      "properties": {
        "totalComponents": {
          "type": "number"
        },
        "totalDownloads": {
          "type": "number"
        },
        "averageRating": {
          "type": "number"
        }
      }
    }
  },
  "required": ["components", "version"],
  "definitions": {
    "component": {
      "type": "object",
      "required": ["name", "description", "version", "files"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9-]*$"
        },
        "description": {
          "type": "string",
          "minLength": 10,
          "maxLength": 200
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        },
        "variants": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "category": {
          "type": "string"
        },
        "complexity": {
          "type": "string",
          "enum": ["beginner", "intermediate", "advanced"]
        },
        "lastUpdated": {
          "type": "string",
          "format": "date-time"
        },
        "files": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "demo": {
          "type": "string",
          "format": "uri"
        },
        "docs": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "category": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        }
      },
      "required": ["name", "description"]
    }
  }
}