{
  "name": "d3-components-cli",
  "version": "0.1.0",
  "description": "D3 Components CLI - 透明化的 D3 組件庫",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "d3-components": "./dist/index.js"
  },
  "files": [
    "dist/**/*",
    "templates/**/*"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.{ts,json}",
    "prepublishOnly": "npm run build",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.0",
    "handlebars": "^4.7.8",
    "inquirer": "^12.7.0",
    "ora": "^8.2.0",
    "semver": "^7.7.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.8",
    "@types/node": "^22.10.5",
    "@types/semver": "^7.7.0",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.18.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vite": "^7.0.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  }
}
